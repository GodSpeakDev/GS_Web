
@{
    
    Layout = "~/Views/Shared/_PlainLayout.cshtml";
}

<section class="notice">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <p>Need to send an Android user a gift? <a href="#">Tap Here!</a></p>
            </div>
        </div>
    </div>
</section>

<section class="purchase-steps">
    <div class="container">

        <!-- Step #1 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>
                        After you find GodSpeak in the iTunes Appstore, tap the “Share” Icon in the upper right of the
                        screen.
                    </p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-1.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #2 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>Tap Gift</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-2.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #3 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>
                        Enter as many email addresses as you want. You can type the address or tap the “+” icon to select
                        people from your address book.
                    </p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-3.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #4 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>You may also write a personalized message for the lucky recepients of GodSpeak.</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-4.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #5 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>
                        Swipe left and right to select the theme of the notification email your gift receipient will
                        receive.
                    </p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-5.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #6 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>Tap "Next"</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-6.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #7 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>Review the details of your order.</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-7.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #8 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>Tap Buy.</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-8.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #9 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>Tap Buy Now.</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-9.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #10 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>Enter your iTunes password and then tap "Ok"</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-10.png">
                    </div>
                </div>
            </div>
        </div>

        <!-- Step #11 -->
        <div class="row">
            <div class="purchase-step clearfix">
                <div class="col-xs-12 col-sm-4 col-md-offset-2 clearfix">
                    <p>You did it! You have given the gift of GodSpeak.</p>
                </div>
                <div class="col-sm-8 col-md-6">
                    <div class="step-image-wrapper">
                        <img src="/Content/Images/step-11.png">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Footer -->
<footer class="site-footer">
    <div class="container">
        <div class="row">
            <div class="hidden-xs col-sm-6 col-md-offset-1 col-md-5">
                <ul class="list-inline footer-links">
                    <li>
                        <div class="brand"></div>
                    </li>
                    <li><a href="#">About</a></li>
                    <li>
                        <span>|</span>
                    </li>
                    <li><a href="#">Blog</a></li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-5 text-right">
                <p class="copyright">© GodSpeak 2017 All Rights Reserved</p>
            </div>
        </div>
    </div>
</footer>


