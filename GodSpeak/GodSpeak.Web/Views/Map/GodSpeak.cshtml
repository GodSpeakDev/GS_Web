<script>

    var points = @Html.Raw(ViewBag.PointsJS);
    var userPoint ={'lat':39.8283, 'lng':98.5795};

    function initMarkers(map, image) {
        var markers = [];
        var big_image = {
            url: '/Content/Images/oval.png'
        };
        // Markers

        for (var i = 0; i < points.length; i++) {
            var marker = new google.maps.Marker({
                position: points[i].point,
                map: map,
                label: {
                    text: ' ',
                    color: 'white',
                    fontSize: '20px'
                },
                icon: image,
                
        });
            markers.push(marker);
            
        }
        var markerCluster = new MarkerClusterer(map, markers,
                { textColor:'white', styles:[{textColor:'#ffffff', textSize:16, height:40, width:40, url:'/Content/Images/oval@2x.png' }]}
            );
        
        map.setZoom(3);
    }

    function getCenter() {
        
        return { lat :20.09024, lng:-95.712891 };
    }
</script>
