
@{
    ViewBag.Title = "ShareAndroidGift";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="success-message android">
    <div class="inner">
        <div class="container">

            <div class="row">

                <div class="col-sm-5 col-sm-offset-6 col-md-4 col-md-offset-6">

                    <div class="form-wrapper">

                        <div class="icon-text-wrapper">
                            <div class="android-icon icon">
                                <span class="sr-only">Android Icon</span>
                            </div>
                            <p>
                                Congrats! You have @ViewBag.InviteBalance Android Gifts to share. Write a custom message so
                                they know who it is from and why!
                            </p>
                        </div>
                        @using (Html.BeginForm("ShareAndroidGift", "Home", new {}, FormMethod.Post, new {role = "form", @class = "add-email-form"}))
                        {

                            <div class="form-group">
                                <label for="message">
                                    Message
                                </label>
                                <textarea id="Message" name="Message" class="form-control" rows="15"></textarea>
                            </div>
                            <button class="btn btn-primary btn-lg btn-block">
                                Send Gifts
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

